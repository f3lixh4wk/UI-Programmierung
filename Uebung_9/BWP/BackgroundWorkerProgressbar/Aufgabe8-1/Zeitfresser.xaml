<UserControl x:Class="Aufgabe8_1.Zeitfresser"
				 x:Name="ZeitfresserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Aufgabe8_1"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300">
	<Grid>
		<StatusBar Name="sbar" VerticalAlignment="Bottom" Background="Beige" >
			<StatusBarItem>
				<TextBlock>Warte auf Zeitfresser</TextBlock>
			</StatusBarItem>
			<StatusBarItem>
				<ProgressBar Width="100" Height="20" Name="pb_progress"/>
			</StatusBarItem>
			<Separator/>
			<StatusBarItem>
				<TextBlock x:Name="tb_progress"></TextBlock>
			</StatusBarItem>
		</StatusBar>
	</Grid>
</UserControl>
