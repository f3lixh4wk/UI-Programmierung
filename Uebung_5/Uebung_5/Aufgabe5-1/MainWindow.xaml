		<Button x:Name="pb_mal" Content="*" HorizontalAlignment="Left" Margin="176,84,0,0" VerticalAlignment="Top" Width="45" Height="27" Click="pb_mal_Click"/>
		<Button x:Name="pb_sieben" Content="7" HorizontalAlignment="Left" Margin="11,119,0,0" VerticalAlignment="Top" Width="45" Height="26" Click="pb_sieben_Click"/>
