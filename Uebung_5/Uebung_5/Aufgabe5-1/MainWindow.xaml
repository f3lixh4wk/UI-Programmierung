		<Button x:Name="pb_minus" Content="-" HorizontalAlignment="Left" Margin="176,118,0,0" VerticalAlignment="Top" Width="45" Height="27" Click="pb_minus_Click"/>
		<Button x:Name="pb_komma" Content="," HorizontalAlignment="Left" Margin="11,151,0,0" VerticalAlignment="Top" Width="45" Height="27" Click="pb_komma_Click"/>
		<Button x:Name="pb_null" Content="0" HorizontalAlignment="Left" Margin="67,151,0,0" VerticalAlignment="Top" Width="45" Height="27" Click="pb_null_Click"/>
		<Button x:Name="pb_plus" Content="+" HorizontalAlignment="Left" Margin="123,151,0,0" VerticalAlignment="Top" Width="45" Height="27" Click="pb_plus_Click"/>
		<Button x:Name="pb_gleich" Content="=" HorizontalAlignment="Left" Margin="176,151,0,2" Width="45" Click="pb_gleich_Click"/>
		<TextBox x:Name="tb_rechnung" HorizontalAlignment="Left" Margin="11,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="210" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="37"/>
	</Grid>
</Window>
