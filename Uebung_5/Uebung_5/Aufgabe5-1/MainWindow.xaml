		<Button x:Name="pb_geteilt" Content="/" HorizontalAlignment="Left" Margin="176,51,0,0" VerticalAlignment="Top" Width="45" Height="27" Click="pb_geteilt_Click"/>
		<Button x:Name="pb_vier" Content="4" HorizontalAlignment="Left" Margin="11,85,0,0" VerticalAlignment="Top" Width="45" Height="27" Click="pb_vier_Click"/>
		<Button x:Name="pb_fuenf" Content="5" HorizontalAlignment="Left" Margin="67,85,0,0" VerticalAlignment="Top" Width="45" Height="27" Click="pb_fuenf_Click"/>
